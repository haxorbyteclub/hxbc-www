@inject IJSRuntime _js
@inherits AppBase

<div class="window app-component draggable resizable" id="@AppId">
	<div class="title-bar">
		<button aria-label="Close" class="close" @onclick="Remove"></button>
		<h1 class="title">Editor</h1>
		<button aria-label="Resize" disabled class="hidden"></button>
	</div>
	<div class="separator"></div>
	<div class="text-sm window-pane flex flex-col">
		<textarea class="editor-textarea flex-grow w-full h-full" @bind="TextContent"
			placeholder="Start typing..."></textarea>
	</div>
</div>

@code {
	private string TextContent { get; set; } = string.Empty;

	private async Task SaveContent()
	{
		await _js.InvokeVoidAsync("localStorage.setItem", "editorContent", TextContent);
	}

	private async Task LoadContent()
	{
		TextContent = await _js.InvokeAsync<string>("localStorage.getItem", "editorContent") ?? string.Empty;
	}

	private void EnableResize()
	{
		// Placeholder for resize logic if needed
	}
}